<UserControl x:Class="CropMonitoring.Pages.SetelliteImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:CropMonitoring.Helpers"
             mc:Ignorable="d" 
              d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Tools" BorderBrush="Black" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Input images" BorderBrush="Black" BorderThickness="2">
                        <ListBox x:Name="lsBoxInputImages"  BorderThickness="0" 
                        ItemsSource="{Binding ImageFiles}" SelectedItem="{Binding SelectedFileName,Mode=TwoWay}">
                        </ListBox>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Input images" BorderBrush="Black" BorderThickness="2">
                        <Button Name="btnCalculate" Height="30" Content="Calculate NDVI" Command="{Binding CalculateNDVI}"/>

                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Input images" BorderBrush="Black" BorderThickness="2">
                        <ListBox x:Name="lsBoxOutputImages"  BorderThickness="0" 
                        ItemsSource="{Binding NDVIImageList}" SelectedItem="{Binding SelectedNDVIImage,Mode=TwoWay}">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Delete" Command="{Binding DeleteCommand}">
                                    </MenuItem>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </GroupBox>
                </Grid>
                
                
            </GroupBox>

            

            <GroupBox Grid.Column="1" Header="Landsat image" BorderBrush="Black" BorderThickness="2">
                <local:ZoomBorder x:Name="border" ClipToBounds="True" Background="Gray">
                    <Image Name="imgLandsat" Source="{Binding ImageFile}" HorizontalAlignment="Stretch" />
                </local:ZoomBorder>
            </GroupBox>

        </Grid>
        
    </Grid>
</UserControl>
